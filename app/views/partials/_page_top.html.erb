<% if controller.is_a?(ForecastsDailyController) %>
  <div class="pull-left">
      <%= link_to raw('<i class="fa fa-chevron-left btn-back"></i>'), url_for(:back), class: "btn btn-default" %>
  </div>
<% end %>

<div class="col-lg-6">
  <%= form_for :filter, url: forecasts_path(), method: :get do |f| %>
    <div class="input-group">
      <%= f.text_field :city, class: "form-control", placeholder: "Type the City Name" %>
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
      </span>
    </div>
  <% end %>
</div>

<hr />
